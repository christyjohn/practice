<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	  	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="point1" class="com.christy.springdemo.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="triangle" class="com.christy.springdemo.Triangle" name="triangle-name">
		<property name="pointA" ref="point1" />
		<property name="pointB">
			<bean id="point2" class="com.christy.springdemo.Point">
				<property name="x" value="-20" />
				<property name="y" value="0" />
			</bean>
		</property>
		<property name="pointC">
			<bean id="point3" class="com.christy.springdemo.Point">
				<property name="x" value="20" />
				<property name="y" value="0" />
			</bean>
		</property>
	</bean>
	
	<alias name="triangle" alias="triangle-alias" />

</beans>  	 